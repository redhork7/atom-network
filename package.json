{
  "name": "atom-network",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:atom-network": "nest build atom-network",
    "build:gateway": "nest build gateway",
    "build:chefrigo": "nest build chefrigo",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "yarn start:atom-network:dev && yarn start:gateway:dev",
    "start:atom-network:dev": "cross-env NODE_ENV=development nest start atom-network --watch",
    "start:gateway:dev": "cross-env NODE_ENV=development nest start gateway --watch",
    "start:chefrigo:dev": "cross-env NODE_ENV=development nest start chefrigo --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/atom-network/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/atom-network/test/jest-e2e.json",
    "typeorm": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "env:atom-network": "env-cmd -f .env.atom-network",
    "env:chefrigo": "env-cmd -f .env.chefrigo",
    "migration:atom-network:generate": "yarn env:atom-network yarn typeorm -d libs/database/src/migration.config.ts migration:generate apps/atom-network/src/migrations/migrate",
    "migration:atom-network:run": "yarn env:atom-network yarn typeorm -d libs/database/src/migration.config.ts migration:run",
    "migration:atom-network:revert": "yarn env:atom-network yarn typeorm -d libs/database/src/migration.config.ts migration:revert",
    "migration:chefrigo:generate": "yarn env:chefrigo yarn typeorm -d libs/database/src/migration.config.ts migration:generate apps/chefrigo/src/migrations/migrate",
    "migration:chefrigo:run": "yarn env:chefrigo yarn typeorm -d libs/database/src/migration.config.ts migration:run",
    "migration:chefrigo:revert": "yarn env:chefrigo yarn typeorm -d libs/database/src/migration.config.ts migration:revert",
    "test:auth": "yarn test libs/auth",
    "test:auth:watch": "yarn test:watch libs/auth"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.3.9",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/typeorm": "^10.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cross-env": "^7.0.3",
    "date-fns": "^3.6.0",
    "env-cmd": "^10.1.0",
    "mysql2": "^3.10.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategy": "^2.0.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport": "^0",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
      "^@app/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@app/types(|/.*)$": "<rootDir>/libs/types/src/$1"
    }
  },
  "packageManager": "yarn@3.4.0"
}
